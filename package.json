{
  "name": "able",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter=@able/web dev",
    "build": "bun run --filter=* build",
    "lint": "bun run --filter=* lint",
    "db:generate": "bun run --filter=@able/db generate",
    "db:migrate": "bun run --filter=@able/db migrate",
    "db:studio": "bun run --filter=@able/db studio"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
